{
	"name" : "myKbits",
	"author" : "Farouq Jouti",
	"permissions": ["contextMenus",  "tabs", "menus"],

	"manifest_version" : 2.0,
	"version" : "1.0",
	"content_scripts" : [{
		"matches": ["<all_urls>"],
		"js": ["content-script.js"]
	}],

	"background":{
		"scripts": ["background-script.js"]
	},
	"web_accessible_resources": ["resources/menu.html", "resources/menu.css"],

	"sidebar_action":{
		"default_title": "My Notes",
		"default_panel": "myKbitViewer/viewer.html"
	}
}
